<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.sale.product.dao.ProductDAO">
    <resultMap type="product" id="productMap">
        <result column="product_id" property="productId"/>
        <result column="product_name" property="productName"/>
        <result column="product_type_id" property="productTypeId"/>
        <result column="product_type_name" property="productTypeName"/>
        <result column="product_in" property="productIn"/>
        <result column="product_kg" property="productKg"/>
        <result column="product_location" property="productLocation"/>
        <result column="product_count" property="productCount"/>
        <result column="cargo_id" property="cargoId"/>
        <result column="cargo_name" property="cargoName"/>
        <result column="cargo_position_id" property="cargoPositionId"/>
        <result column="cargo_position_capacity" property="cargoPositionCapacity"/>
    </resultMap>
    
    <select id="productList" parameterType="product" resultMap="productMap">
        SELECT 
            product_id,
            product_name,
            product_count
        FROM 
            product
    </select>
    
    <select id="type" parameterType="product" resultMap="productMap">
    	SELECT
    		product_type_id,
    		product_type_name
    	FROM
    		product_type
    </select>
    
    <select id="cargo" parameterType="product" resultMap="productMap">
    	SELECT 
    		cargo_id,
    		cargo_name
    	FROM 
    		cargo
    </select>
    
    <select id="position" parameterType="product" resultMap="productMap">
    	SELECT
    		cargo_position_id,
    		cargo_position_capacity
    	FROM
    		cargo_position
    	WHERE cargo_id = #{cargoId}
    </select>
    
    <select id="productDetail" parameterType="product" resultMap="productMap">
    	 SELECT 
            product_id,
            product_name,
            product_type_id,
            product_type_name,
            product_in,
            product_kg,
            product_location,
            product_count
        FROM 
            product
        WHERE product_id = #{productId}
    </select>
    
   <update id="updateProduct" parameterType="product">
    UPDATE product
    SET 
        product_id = #{productId},
        product_name = #{productName},
        product_count = #{productCount},
        product_type_name = #{productTypeName},
        product_in = TO_DATE(#{productIn}, 'YYYY-MM-DD'),
        product_kg = #{productKg},
        product_location = #{productLocation},
        product_type_id = #{productTypeId}
    WHERE product_id = #{productId}
</update>


    
    <delete id="productDelete" parameterType="product">
    	DELETE FROM product WHERE product_id = #{productId}
    </delete>
    
    <insert id ="productInsert" parameterType="product">
    	<selectKey keyProperty="productId" resultType="int" order="BEFORE">
    		select product_seq.nextval from dual
    	</selectKey>
    	INSERT INTO product ( 
    		product_id,
            product_name,
            product_type_id,
            product_type_name,
            product_in,
            product_kg,
            product_location,
            product_count)
            VALUES (
            #{productName},
            #{productIn},
            #{productKg},
            #{productLocation},
            #{productCount},
            #{productId},
            )
    </insert>
    

</mapper>
