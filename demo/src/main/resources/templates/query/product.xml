<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sale.product.dao.ProductDAO">
    <resultMap type="com.sale.product.vo.ProductVO" id="productMap">
        <id column="product_id" property="productId"/>
        <result column="product_name" property="productName"/>
        <result column="product_type_id" property="productTypeId"/>
        <result column="product_type_name" property="productTypeName"/>
        <result column="product_in" property="productIn"/>
        <result column="product_kg" property="productKg"/>
        <result column="product_location" property="productLocation"/>
    </resultMap>
    
    <select id="productList" parameterType="com.sale.product.vo.ProductVO" resultMap="productMap">
        SELECT 
            product_id AS productId,
            product_name AS productName,
            product_type_id AS productTypeId,
            product_type_name AS productTypeName,
            product_in AS productIn,
            product_kg AS productKg,
            product_location AS productLocation
        FROM 
            product
    </select>
</mapper>
